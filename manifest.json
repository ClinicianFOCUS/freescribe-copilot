{
  "manifest_version": 3,
  "name": "Freescribe Copilot",
  "version": "1.0",
  "description": "Record and play audio from tab and microphone",
  "permissions": ["activeTab", "tabCapture", "storage", "sidePanel"],
  "host_permissions": ["<all_urls>"],
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Open Freescribe Copilot"
  }
}
